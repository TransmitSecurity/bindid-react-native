{
  "name": "@transmitsecurity/bindid-react-native",
  "version": "1.0.1",
  "description": "React Native SDK for BindID SDK",
  "main": "lib/commonjs/index.js",
  "module": "lib/module/index.js",
  "types": "lib/typescript/src/index.d.ts",
  "react-native": "src/index.tsx",
  "source": "src/index",
  "files": [
    "src",
    "lib",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "android",
    "ios",
    "cpp",
    "bindid-react-native.podspec",
    "!lib/typescript/example",
    "!android/build",
    "!ios/build"
  ],
  "scripts": {
    "test": "jest",
    "typescript": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "prepare": "bob build",
    "release": "release-it",
    "example": "yarn --cwd example",
    "pods": "cd example && pod-install --quiet",
    "bootstrap": "yarn example && yarn && yarn pods",
    "idl:generate": "rm -rf ../bindid-sdk-common/idl/output && cd ../bindid-sdk-common/idl && sed -i -e 's/platforms(android,ios)//g' inputs/bindid-sdk.idl && sed -i -e 's/platforms(ios, android)//g' inputs/bindid-sdk.idl && ./gradlew generateIdl && git restore inputs/bindid-sdk.idl",
    "idl:copy": "cp -r ../bindid-sdk-common/idl/output/ts_singlefile/bindid/*.ts src/transmit-bind-id-api.ts && cp -r ../bindid-sdk-common/idl/output/ts_decl/bindid/*.ts src/decl/transmit-bind-id-api.d.ts && rm -rf ../bindid-sdk-common/idl/output/",
    "idl:build": "npm run idl:generate && npm run idl:copy"
  },
  "keywords": [
    "bindid",
    "transmit-security",
    "authentication",
    "Fido2",
    "webauthn",
    "oidc",
    "react-native",
    "ios",
    "android"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TransmitSecurity/bindid-react-native.git"
  },
  "author": "Transmit Security (https://www.transmitsecurity.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://www.transmitsecurity.com"
  },
  "podname": "bindid-react-native",
  "homepage": "https://github.com/TransmitSecurity/bindid-react-native.git#readme",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^11.0.0",
    "@react-native-community/bob": "^0.8.0",
    "@react-native-community/eslint-config": "^2.0.0",
    "@release-it/conventional-changelog": "^5.0.0",
    "@types/jest": "^26.0.0",
    "@types/react": "^16.9.19",
    "@types/react-native": "0.62.13",
    "commitlint": "^11.0.0",
    "eslint": "^7.2.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^6.0.0",
    "jest": "^26.0.1",
    "pod-install": "^0.1.0",
    "prettier": "^2.0.5",
    "react": "18.0.0",
    "react-native": "^0.69.1",
    "react-native-builder-bob": "^0.18.0",
    "release-it": "^15.2.0",
    "typescript": "^4.1.3"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@react-native-community",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "quoteProps": "consistent",
          "singleQuote": true,
          "tabWidth": 2,
          "trailingComma": "es5",
          "useTabs": false
        }
      ]
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/"
  ],
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  },
  "dependencies": {
    "got": "^12.1.0",
    "node-fetch": "^3.2.10",
    "parse-path": "5.0.0",
    "parse-url": "6.0.1"
  },
  "@react-native-community/bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      "typescript"
    ]
  }
}
